<Page x:Class="TrainingWPF.FirstPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrainingWPF"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="410" d:DesignWidth="800" 
      Title="FirstPage">

    <Grid Background="#f5d2aa">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" Orientation="Horizontal" Margin ="0 30 0 0" >
            <Button Name="btnNext" Template="{StaticResource btnTemp}" Click="btnNext_Click" Content="Авторизация" Width="100" Height="30" />
            <Button Name="btnReg" Click="btnReg_Click" Content="Регистрация" Width="100" Margin="15 0 0 0" Template="{StaticResource btnTemp}" />
        </WrapPanel>


        <Image  Height="500" Width="350" Grid.Row="0" x:Name="Logo" Source="/Resources/clipart2680273.png"  />




    </Grid>
</Page>
